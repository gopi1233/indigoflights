                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{message: "Resource not found"}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">404</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>
        </error-handler>
    </flow>
    <flow name="get:\indigoFlights:indigoFlights-config">
        <logger level="INFO" message="indigoflights flow starts......#[payload]" />
        <http:request method="GET" doc:name="Request" doc:id="42e54031-cb7f-4261-8abd-71a372a67682" config-ref="HTTP_Request_configuration" path="/api/getFlights">
            <http:query-params><![CDATA[#[output application/java
---
{
	from : attributes.queryParams.from,
	to : attributes.queryParams.to,
	depatureDate : attributes.queryParams.depatureDate
}]]]></http:query-params>
        </http:request>
        <logger level="INFO" doc:name="Logger" doc:id="ebdadb46-2316-41b3-a002-164a15c03291" message="response of indigo flights..#[payload]." />
		<error-handler >
			<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="bf29d36e-d9b4-44c8-bf8d-97b70a5b49ce" >
				<ee:transform doc:name="Transform Message" doc:id="dddc34a5-1723-455b-80e8-52a576a53e2a" >
					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	
	"message":"server not working"
	
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</on-error-continue>
		</error-handler>
    </flow>
</mule>
